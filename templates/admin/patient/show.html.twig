{% extends "base.html.twig" %}

{% block title %}
	Fiche Patient
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row m-4">
			<h1>Voici les informations du patient stockées en BDD</h1>
		</div>
		<div class="row">
			<div class="col-6">
				<div class="col-6">
					<div class="row">
						<h2>Civilités</h2>
						<hr>

					</div>

					<div class="col">
						<p>Sexe :
							{{ patient.gender }}</p>
						<p>Nom :
							{{ patient.lastName }}</p>
						<p>Prénom :
							{{ patient.firstName }}</p>

					</div>

				</div>
				<div class="col">
					<div class="row">
						<h2>Coordonnées</h2>

					</div>
					<div class="row">
						<div class="col-2">
							<p>Adresse :</p>
							<p>Code Postal :</p>
							<p>Ville :</p>
						</div>
						<div class="col-4">
							<p>{{ patient.address1 }}</p>
							<p>{{ patient.address2 }}</p>
							<p>{{ patient.zipCode }}</p>
							<p>{{ patient.city }}</p>
						</div>

					</div>
				</div>
				<div class="row">
					<h3>Contact</h3>
				</div>
				<div class="col">
					<p>
						<i class="fas fa-phone"></i>
						{{ patient.phone }}</p>
					<p>
						<i class="fas fa-at"></i>
						{{ patient.email }}</p>
				</div>
			</div>

			<div class="col-6">
				<div class="col-6">
					<div class="row">
						<h2>Médécin Traitant</h2>
					</div>
					<div class="col">
						Dr
						{{ patient.doctor.lastName}}
						{{ patient.doctor.firstName}}
					</div>
				</div>
				<div class="col-6">
					<div class="row">
						<h2>Paramédicaux</h2>
					</div>
					<div class="col">
						{% for nurse in patient.nurses %}
							<p>{{ nurse.lastName}}
								{{ nurse.firstName}}</p>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col text-right">
				<a href="{{ path("admin_patient_index") }}" class="btn btn-info">
					<i class="fas fa-backward"></i>
				</a>
				<button class="btn btn-warning">
					<a href="{{ path("admin_patient_edit", {'id' : patient.id}) }}">
						<i class="far fa-edit text-light"></i>
					</a>
				</button>
				<button class="btn btn-danger">
					<a href="#">
						<i class="fas fa-trash text-light"></i>
					</a>
				</button>
			</div>

		</div>
	</div>
{% endblock %}
