{% extends "base.html.twig" %}

{% block title %}
	Enregistrement d'un nouveau patient
{% endblock %}
{% block style %}
	<style>
		.select2-hidden-accessible {
			border: 0 !important;
			clip: rect(0 0 0 0) !important;
			-webkit-clip-path: inset(50%) !important;
			clip-path: inset(50%) !important;


			padding: 0 !important;

			width: 1px !important;

		}
	</style>

{% endblock %}
{% block body %}
	<div class="container">
		<div class="row m-4">
			<h1>Cr√©ation d'un nouveau patient</h1>
		</div>

		{{ form_start(form) }}
		<div class="row">
			<div class="col form-group">
				{{ form_row(form.gender) }}
				{{ form_row(form.lastName) }}
				{{ form_row(form.firstName) }}
				{{ form_row(form.birthDate) }}
			</div>
			<div class="col form-group">
				{{ form_row(form.address1) }}
				{{ form_row(form.address2) }}
				{{ form_row(form.zipCode) }}
				{{ form_row(form.city) }}
			</div>
		</div>
		<div class="row">
			<div class="col form-group">
				{{ form_row(form.phone) }}
				{{ form_row(form.email) }}
			</div>
			<div class="col form-group">
				{{ form_row(form.doctor) }}
				{# {{ form_row(form.nurses) }} #}
				<label for="nurses">Infirmier(e)s</label>
				<select class="js-example-basic-multiple form-control" name="nurses[]" multiple="">
					{% for nurse in patient.nurses %}
						<option value="AL">{{nurse.lastName}}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="text-right">
			<button type="submit" class="btn btn-success">Enregistrer</button>

		</div>
		{{ form_end(form) }}
	</div>


	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>

	<script>
		$(document).ready(function () {
$('.js-example-basic-multiple').select2();
});
	</script>


{% endblock %}
